    <script>


        let swapOne = ['background-light', 'text-dark', 'text-muted'];
        let swapTwo = ['background-dark', 'text-white', 'text-white-50'];
        let sizeSwap = swapOne.length;
        let nightday = true;
        $('#changeIconMoon').hide();
        function ModeDarkLight(){
            $('.main-page').hide();
            if (nightday){
                $('#changeIconMoon').fadeIn('slow');
                $('#changeIconSun').hide();
            } else {
                $('#changeIconSun').fadeIn('slow');
                $('#changeIconMoon').hide();
            }
            nightday = !nightday;

            let swapList = swapOne;
            swapOne = swapTwo;
            swapTwo = swapList;
            for (let i = 0;i < sizeSwap;i++){
                let target = $(`.${swapList[i]}`);
                if (!swapOne[i].includes('text')){
                    target.addClass(`change-animation animation-change-image`);
                } else {
                    target.addClass(`change-animation text-secondary`);
                }
                setTimeout(() => {
                    target.removeClass(`animation-change-image`);
                    target.removeClass(`text-secondary`);
                    target.toggleClass(`${swapOne[i]} ${swapTwo[i]}`);
                }, 300);
            }
            $('.main-page').show();
        }


